<% title "Simple Server Monitor Console" %>
<h2>Hosts</h2>
<p><%= link_to "New Host", new_host_path %></p>
<div style="   border: 1px solid #000; padding: 10px 10px 10px 10px; width: 95%; margin: 10px 10px 30px 10px;" >
<table cellpadding="5">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Active</th>
  </tr>
  <% for host in @hosts %>
    <tr>
      <td><%=h host.name %></td>
      <td><%=h host.address %></td>
      <td><%=h host.active %></td>
      <td><%= link_to "Show", host %> | <%= link_to "Edit", edit_host_path(host) %> | <%= link_to "Destroy", host, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
</div>
<div style=" background-color: #ccc; border: 1px solid #000; padding: 10px; width: 95%; margin: 10px 10px 10px 10px;"  >
<h2>Current Reports</h2>
<%= will_paginate @reports %>
<table>
  <table cellpadding="5">
    <tr>
      <th>Sent At</th>
      <th>What's Broken</th>
      <th>Report Content</th>
    </tr>
<%= render :partial => 'reports/report_index', :collection => @reports %>
</table>
<%= will_paginate @reports %>
</div>